###
### Application environment variables
###

APP_NAMESPACE=docker-project
APP_DIR="/app"
APP_BIN_DIR="${APP_DIR}/bin"
APP_PUBLIC_DIR="${APP_DIR}/public"
APP_DOCUMENT_ROOT="."

APP_ENV=dev
APP_DEBUG=1
# Log level: debug, info, notice, warning, error, critical, alert, emergency.
APP_DEBUG_LEVEL=debug
# Project ID generated by composer symfony:generate-id
APP_PROJECT=01EH7SA8WZFGYTXJVVAQXT1JC7
APP_SECRET=

APP_HOST=app.local
APP_URL="https://${APP_HOST}"
APP_TRUSTED_HOSTS='^(localhost|app\.local)$'

GIT_TAG=
GIT_BRANCH=
GIT_COMMIT_ID=
GIT_COMMIT_SHA=

###
### PHP environment variables
###

PHP_VERSION=7.4
PHP_CLI_VERSION=${PHP_VERSION}
PHP_MEMCACHED_VERSION=latest
PHP_REDIS_VERSION=latest
PHP_POSTGRES_VERSION=latest

# https://symfony.com/doc/current/cloud/cookbooks/env.html#symfonycloud-environment-variables
#SYMFONY_APP_DIR=
#SYMFONY_APPLICATION_NAME=${APP_NAME}
#SYMFONY_PROJECT=
#SYMFONY_TREE_ID=
#SYMFONY_BRANCH=

###
### Docker environment variables
###

# DOCKER_DEBUG=0
# DOCKER_PROJECT_NAME=${APP_NAMESPACE}

# Compose default env variables
# COMPOSE_PROJECT_NAME=${APP_NAMESPACE:-}

###
### Docker default Logging config
###

LOGGING_DRIVER=json-file
LOGGING_OPTIONS_MAX_SIZE=200k
LOGGING_OPTIONS_MAX_FILE=10

###
### Docker default Network config
###

NETWORK_NAME="${APP_NAMESPACE}-network"
# If you want to customize the created network, use the following variable
NETWORK_OPTIONS="--driver=bridge"
# Set the IP address of the external access interface
NETWORK_IP=0.0.0.0
# Set the local exposed ports for http and https on the Host
NETWORK_HTTP=80
NETWORK_HTTPS=443
NETWORK_HTTPS_ENABLE=1
NETWORK_HTTPS_REDIRECT=1

###
### Redis
### https://github.com/bitnami/bitnami-docker-redis#securing-redis-traffic
### https://hub.docker.com/r/rediscommander/redis-commander/
###

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_NAMESPACE="${APP_NAMESPACE}"
REDIS_DSN=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_NAMESPACE}
# REDIS_USERNAME=redis
# REDIS_PASSWORD=secret-password

###
### Memcached
###

MEMCACHED_HOST=memcached
MEMCACHED_PORT=11211
MEMCACHED_NAMESPACE=default
MEMCACHED_DNS=tcp://${MEMCACHED_HOST}:${MEMCACHED_PORT}?persistent=1&weight=1&timeout=1&retry_interval=15

###
### PostgreSQL
### https://www.postgresql.org/docs/current/auth-trust.html
### rabbitmqctl --vhost / add_user postgres secret-password
###

POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=default
POSTGRES_USERNAME=postgres
POSTGRES_PASSWORD=secret-password
POSTGRES_DNS="postgresql://${POSTGRES_USERNAME}:@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?connect_timeout=5"
# POSTGRES_HOST_AUTH_METHOD=trust

###
### RabbitMQ
###

RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=rabbitmq
RABBITMQ_PASSWORD=secret-password
RABBITMQ_VHOST=/
#RABBITMQ_ERLANG_COOKIE=secret_cookie_here

RABBITMQ_MANAGEMENT_HOST=rabbitmq-management
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_MANAGEMENT_PORT_EXTERNAL=15672

###
### Vault
###

VAULT_HOST=vault
VAULT_ADDR=http://localhost:8200
VAULT_API_ADDR=http://0.0.0.0:8200

